{
    "build": {
        "publish": {
            "provider": "github",
            "owner": "zestones",
            "repo": "videmo"
        },
        "files": [
            "public/",
            "dist/",
            "src/electron",
            "build/",
            "node_modules/"
        ],
        "extraResources": [
            "public/videmo.db"
        ],
        "productName": "Videmo",
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "perMachine": true,
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        }
    }
}